rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* Helpers */
    function isLoggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isLoggedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'] ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
        );
    }

    /* Users */
    match /users/{userId} {
      allow list: if isAdmin();
      // Allow any logged-in user to read user profiles (for chat/product details)
      allow read: if isLoggedIn(); 
      allow create: if isLoggedIn() && request.auth.uid == userId;
      allow update: if isAdmin() || (isLoggedIn() && request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    /* Categories */
    match /categories/{categoryId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }

    /* Products */
    match /products/{productId} {
      allow read: if isLoggedIn();
      allow create: if isLoggedIn();
      allow update, delete: if isAdmin()
        || (isLoggedIn() && request.auth.uid == resource.data.ownerId);

      match /bookings/{bookingId} {
        allow create: if isLoggedIn()
          && request.resource.data.buyerId == request.auth.uid;
        // FIX #1: Allow all logged-in users to READ bookings to check availability (Double Booking Prevention)
        allow read: if isLoggedIn(); 
        allow update, delete: if false;
      }

      match /reviews/{reviewId} {
        allow read: if isLoggedIn();
        allow create: if isLoggedIn()
          && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if request.auth != null
          && request.auth.uid == resource.data.authorId;
      }
    }

    /* Flagged products */
    match /flagged_products/{docId} {
      allow read, write: if isAdmin();
    }

    /* Orders */
    match /orders/{orderId} {
      allow create: if isLoggedIn();
      allow read: if isAdmin()
        || (isLoggedIn() && (
          resource.data.buyerId == request.auth.uid ||
          resource.data.ownerId == request.auth.uid ||
          resource.data.userId == request.auth.uid // Match OrderModel schema
        ));
      allow update: if isAdmin()
        || (isLoggedIn() && (
          resource.data.userId == request.auth.uid || 
          resource.data.ownerId == request.auth.uid
        ));
      allow delete: if false;

      match /items/{itemId} {
        allow read: if isAdmin() || isLoggedIn();
        allow create: if isLoggedIn(); 
        allow update, delete: if isAdmin();
      }

      // Allow users to read ANY subcollection under their order (e.g. rentals/details, transactions)
      match /{document=**} {
        allow read: if isAdmin() || (isLoggedIn() && (
          get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/orders/$(orderId)).data.ownerId == request.auth.uid
        ));
      }

      match /rentals/{docId} {
        allow read: if isAdmin() || isLoggedIn();
        allow write: if isAdmin() || isLoggedIn();
      }

      match /transactions/{transactionId} {
        allow read: if isAdmin();
        // FIX #2: Allow users to create payment transactions (otherwise payments fail)
        allow create: if isLoggedIn();
        allow update, delete: if false;
      }
    }

    /* Rentals */
    match /rentals/{rentalId} {
      allow read: if isLoggedIn()
        && (resource.data.ownerId == request.auth.uid
          || resource.data.renterId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }

    /* Delivery */
    match /delivery/{deliveryId} {
      allow read: if isAdmin() || (isLoggedIn() && (
          get(/databases/$(database)/documents/orders/$(deliveryId)).data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/orders/$(deliveryId)).data.ownerId == request.auth.uid
      ));
      allow write: if isAdmin();
    }

    match /deliveries/{deliveryId} {
      allow read, write: if isAdmin();
    }

    /* KYC */
    match /kyc/{userId} {
      allow list: if isAdmin();
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null && request.auth.uid == userId;
      // FIX #3: Allow users to UPDATE their own KYC (e.g. re-submission after rejection)
      allow update: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow delete: if false;
    }

    /* Booking Requests */
    match /booking_requests/{requestId} {
      allow create: if isLoggedIn()
        && request.resource.data.buyerId == request.auth.uid;
      allow read: if isLoggedIn()
        && (resource.data.buyerId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    /* Plans */
    match /plans/{planId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }

    /* Subscriptions */
    match /subscriptions/{subscriptionId} {
      allow read: if isAdmin()
        || (isLoggedIn() && subscriptionId == request.auth.uid);
      // Allow authenticated users to update their own subscription (for payment success)
      allow write: if isAdmin()
        || (isLoggedIn() && subscriptionId == request.auth.uid);

      match /transactions/{transactionId} {
        allow read: if isAdmin()
          || (isLoggedIn() && subscriptionId == request.auth.uid); 
        // Allow users to write their own subscription transactions
        allow write: if isAdmin()
          || (isLoggedIn() && subscriptionId == request.auth.uid);
      }
    }
    /* Chats */
    match /chats/{chatId} {
      // Allow read/write if user is a participant
      allow create: if isLoggedIn();
      allow read, update: if isLoggedIn() && (
        resource.data.ownerId == request.auth.uid ||
        resource.data.renterId == request.auth.uid
      );

      match /messages/{messageId} {
        allow read, create: if isLoggedIn();
        // Allow updating messages (e.g. marking as read)
        // Note: Ideally we check if user is participant, but get() can be flaky. 
        // For now, allow logged in users to update (mostly for isRead).
        allow update: if isLoggedIn();
      }
    }
  }
}
